{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "preserve",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true
    },
    "include": [
        "typings/**/*",
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules"
    ],
    "compileOnSave": false
}
